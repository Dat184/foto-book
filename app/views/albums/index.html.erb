<!-- Photo/Album Toggle -->
<div class="d-flex justify-content-center mb-4">
  <div class="btn-group" role="group" aria-label="Content type toggle">
    <%= link_to photos_path, class: "btn btn-outline-secondary", data: { turbo_prefetch: false } do %>
      PHOTO
    <% end %>
    <%= link_to albums_path, class: "btn btn-primary", "aria-current": "page", data: { turbo_prefetch: false } do %>
      ALBUM
    <% end %>
  </div>
</div>

<div id="albums" class="row align-items-start h-auto gy-2">
  <% @albums.each do |album| %>
      <%= render album %>
  <% end %>
</div>

<% if @pagy.next.present? %>
  <%= turbo_frame_tag :next_page, src: albums_path(page: @pagy.next, format: :turbo_stream), loading: :lazy %>
<% end %>

<!-- Album Modal -->
<%= render 'album_modal' %>