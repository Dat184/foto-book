<!-- Photo/Album Toggle -->
<div class="d-flex justify-content-center mb-4">
  <div class="btn-group" role="group" aria-label="Content type toggle">
    <%= link_to photos_path, class: "btn btn-outline-secondary" do %>
      PHOTO
    <% end %>
    <%= link_to albums_path, class: "btn btn-primary", "aria-current": "page" do %>
      ALBUM
    <% end %>
  </div>
</div>

<div id="albums" class="row align-items-start h-auto gy-2">
  <% @albums.each do |album| %>
      <%= render album %>
  <% end %>
</div>
