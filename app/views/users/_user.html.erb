<div class="col mt-3">
  <div class="card text-center shadow-sm border-0 p-4">
    <div class="d-flex justify-content-center mt-3">
      <%= image_tag avatar_url(user), class: "rounded-circle object-fit-cover", style: "width: 120px; height: 120px", alt: "avatar" %>
    </div>
    <div class="card-body">
      <h5 class="card-title fw-bold mb-3"><%= user.firstName %> <%= user.lastName %></h5>
      <div class="d-flex justify-content-evenly mb-3">
        <div class="text-center">
          <h6 class="fw-bold mb-0"><%= user.photos_count %></h6>
          <small class="text-muted">Photos</small>
        </div>
        <div class="text-center">
          <h6 class="fw-bold mb-0"><%= user.albums_count %></h6>
          <small class="text-muted">Albums</small>
        </div>
      </div>
        <%= render partial: "users/follow_button", locals: { user: user } %>
    </div>
  </div>
</div>