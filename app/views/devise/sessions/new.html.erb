<h1 class="text-center text-primary fw-bold mb-4">Fotobook Login</h1>

<div class="account-wall">

  <img
    class="rounded-circle mx-auto d-block mb-3"
    src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"
    alt="Profile"
  />

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin d-flex flex-column align-items-center", data: { turbo: false } }) do |f| %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password" %>
    <%= f.submit "Log in" , class: "btn btn-primary w-100 mb-3" %>
    <div class="d-flex justify-content-between w-100 flex-md-column align-items-md-center flex-xl-row ">
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-decoration-none text-muted" %>
      <% end %>
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "Create an account", new_registration_path(resource_name), class: "text-decoration-none fw-bold"%>
      <% end %>
    </div>
  <% end %>

</div>
<div class="mt-4 d-flex flex-column text-center gap-2">

  <%= button_to user_google_oauth2_omniauth_authorize_path, method: :post, data: { turbo: false }, class: "btn btn-white text-black w-75 btn-outline-dark" do %>
    <i class="fa-brands fa-google"></i> Login with Google
  <% end %>
  <%= button_to user_google_oauth2_omniauth_authorize_path, method: :post, data: { turbo: false }, class: "btn btn-primary text-white w-75" do %>
    <i class="fa-brands fa-facebook"></i> Login with Facebook
  <% end %>
  <%= button_to user_google_oauth2_omniauth_authorize_path, method: :post, data: { turbo: false }, class: "btn btn-info text-white w-75" do %>
    <i class="fa-brands fa-twitter"></i> Login with Twitter
  <% end %>
</div>

